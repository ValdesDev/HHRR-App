{
  "name": "hr-app-server",
  "version": "0.0.0",
  "private": true,
  "workspaces":[
    "client",
    "server"
  ],
  "engines": {
    "npm": "7.13.0",
    "node": "16.2.0"
  },
  "scripts": {
    "client:build": "cd client && npm install",
    "server:build": "cd server && npm install",
    "postinstall": "npm run server:build && npm run client:build",
    "server:start": "cd server && npm run start",
    "client:start": "cd client && npm run start",
    "start": "npm run start -w client && npm run start -w server"
  }
}
